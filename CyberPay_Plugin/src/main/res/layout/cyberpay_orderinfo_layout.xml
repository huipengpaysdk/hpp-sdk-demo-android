<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_linear_order_document"
        style="@style/cyberpay_style_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cyberpay_order_document"
            android:textSize="@dimen/cyberpay_main_second_title" />

        <TextView
            android:id="@+id/id_txt_order_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/cyberpay_main_second_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linear_order_paymoney"
        style="@style/cyberpay_style_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cyberpay_order_paymoney"
            android:textSize="@dimen/cyberpay_main_second_title" />

        <TextView
            android:id="@+id/id_txt_order_paymoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/cyberpay_text_orderjine_color"
            android:textSize="@dimen/cyberpay_main_second_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linear_order_mername"
        style="@style/cyberpay_style_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cyberpay_order_payeename"
            android:textSize="@dimen/cyberpay_main_second_title" />

        <TextView
            android:id="@+id/id_txt_order_mername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/cyberpay_main_second_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linear_order_orderno"
        style="@style/cyberpay_style_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cyberpay_order_orderno"
            android:textSize="@dimen/cyberpay_main_second_title" />

        <TextView
            android:id="@+id/id_txt_order_orderno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/cyberpay_main_second_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linear_order_time"
        style="@style/cyberpay_style_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cyberpay_order_ordertime"
            android:textSize="@dimen/cyberpay_main_second_title" />

        <TextView
            android:id="@+id/id_txt_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/cyberpay_main_second_title" />
    </LinearLayout>

    <View
        android:id="@+id/id_linear_split_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#999999" />

    <TextView
        android:id="@+id/id_txt_order_tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/cyberpay_order_tips"
        android:textSize="@dimen/cyberpay_main_second_title" />

    <TextView
        android:id="@+id/id_txt_order_tips2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/cyberpay_order_tips2"
        android:textSize="@dimen/cyberpay_main_second_title" />

    <ImageView
        android:id="@+id/id_img_order_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:src="@drawable/cyberpay_down" />

</LinearLayout>